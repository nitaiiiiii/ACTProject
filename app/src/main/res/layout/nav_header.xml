<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ruby_red"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgHeaderProfile"
        android:layout_width="@dimen/dp80"
        android:layout_height="@dimen/dp80"
        android:layout_margin="@dimen/dp30"
        android:src="@drawable/profile_picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHeaderProfileName"
        style="@style/extra_large_lato_bold"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:maxLines="1"
        android:text="MARK JOHNSON"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/txtHeaderProfileEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgHeaderProfile"
        app:layout_constraintTop_toTopOf="@id/imgHeaderProfile" />

    <TextView
        android:id="@+id/txtHeaderProfileEmail"
        style="@style/small_lato_regular"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="markj@gmail.com"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/imgHeaderProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txtHeaderProfileName"
        app:layout_constraintTop_toBottomOf="@id/txtHeaderProfileName" />


</androidx.constraintlayout.widget.ConstraintLayout>