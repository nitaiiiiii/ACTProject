<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp10">

    <ImageView
        android:id="@+id/imgSecondMainNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_base_favorite_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ci.act.widgets.CustomTextView
        android:id="@+id/txtSecondMainNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp5"
        android:background="@drawable/rounded_button"
        android:maxLines="1"
        android:paddingStart="@dimen/dp10"
        android:paddingEnd="@dimen/dp10"
        android:text="NEW"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/imgSecondMainNotification"
        app:layout_constraintStart_toEndOf="@id/imgSecondMainNotification"
        app:layout_constraintTop_toTopOf="@id/imgSecondMainNotification" />

    <com.ci.act.widgets.CustomTextView
        android:id="@+id/txtHeadingMainNotification"
        style="@style/large_text_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp5"
        android:maxLines="1"
        android:text="David Kovalev"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/txtSecondMainNotification"
        app:layout_constraintStart_toEndOf="@id/txtSecondMainNotification"
        app:layout_constraintTop_toTopOf="@id/txtSecondMainNotification" />

    <com.ci.act.widgets.CustomTextView
        android:id="@+id/txtLikedComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:maxLines="2"
        android:text="Liked your event in Facebook shared link '\nThe Baseball Event'"
        app:layout_constraintStart_toStartOf="@id/txtSecondMainNotification"
        app:layout_constraintTop_toBottomOf="@id/txtSecondMainNotification" />

    <ImageView
        android:id="@+id/imgLikedComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_radio_button_unchecked_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ci.act.widgets.CustomTextView
        android:id="@+id/txtMinutesAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20m ago"
        app:layout_constraintBottom_toBottomOf="@id/txtLikedComment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtLikedComment" />

</androidx.constraintlayout.widget.ConstraintLayout>