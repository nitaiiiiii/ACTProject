<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp10"
    android:padding="@dimen/dp20"
    app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/txtEventsGameName"
        style="@style/extra_large_text"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="40 YARD DASH"
        android:textColor="@color/ruby_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ci.act.widgets.CustomTextView
        android:id="@+id/txtEventsReportsRanks"
        style="@style/extra_large_text_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp15"
        android:gravity="center_horizontal"
        android:text="11"
        android:textColor="@color/ruby_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.ci.act.widgets.CustomTextView
        android:id="@+id/txtEventsPosition"
        style="@style/small_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp1"
        android:gravity="center_horizontal"
        android:text="TH"
        android:textColor="@color/ruby_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txtEventsReportsRanks"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ci.act.widgets.CustomTextView
        android:id="@+id/txtEventsReportsRanking"
        style="@style/large_text_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:layout_marginEnd="@dimen/dp6"
        android:text="RANK"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/txtEventsReportsRanks"
        app:layout_constraintStart_toStartOf="@id/txtEventsReportsRanks"
        app:layout_constraintTop_toBottomOf="@id/txtEventsReportsRanks" />

    <com.ci.act.widgets.CustomTextView
        android:id="@+id/txtEventsReportsSpeedNumber"
        style="@style/extra_large_text_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center_horizontal"
        android:text="4776"
        android:textColor="@color/black"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtEventsReportsRanking" />

    <com.ci.act.widgets.CustomTextView
        android:id="@+id/txtEventsReportsSpeed"
        style="@style/large_text"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Speed"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toStartOf="@id/txtEventsReportsSeconds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtEventsReportsSpeedNumber" />

    <com.ci.act.widgets.CustomTextView
        android:id="@+id/txtEventsReportsSecondsNumber"
        style="@style/extra_large_text_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center_horizontal"
        android:text="4776"
        android:textColor="@color/black"

        app:layout_constraintStart_toStartOf="@id/txtEventsReportsSeconds"

        app:layout_constraintTop_toBottomOf="@id/txtEventsReportsRanking" />

    <com.ci.act.widgets.CustomTextView
        android:id="@+id/txtEventsReportsSeconds"
        style="@style/large_text"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Speed"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toStartOf="@id/txtEventsReportsTested"
        app:layout_constraintStart_toEndOf="@id/txtEventsReportsSpeed"
        app:layout_constraintTop_toBottomOf="@id/txtEventsReportsSpeedNumber" />

    <com.ci.act.widgets.CustomTextView
        android:id="@+id/txtEventsReportsTestedNumber"
        style="@style/extra_large_text_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp5"
        android:gravity="center_horizontal"
        android:text="4776"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtEventsReportsRanking" />

    <com.ci.act.widgets.CustomTextView
        android:id="@+id/txtEventsReportsTested"
        style="@style/large_text"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="No.of Tested"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtEventsReportsSpeedNumber" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtEventsReportsTested" />

</androidx.constraintlayout.widget.ConstraintLayout>